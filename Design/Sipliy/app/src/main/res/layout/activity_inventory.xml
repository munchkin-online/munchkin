<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inventory_background"
    tools:context=".InventoryActivity">

    <TextView
        android:id="@+id/char_hat"
        android:layout_width="200sp"
        android:layout_height="48sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="65sp"
        android:layout_marginBottom="8sp"
        android:background="@drawable/character_hat"
        android:fontFamily="@font/segoesc"
        android:paddingLeft="30sp"
        android:paddingTop="8sp"
        android:paddingRight="30sp"
        android:text="@string/char_hat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/character"
        app:layout_constraintEnd_toEndOf="@+id/character"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/character"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/list_hat"
        android:layout_width="200sp"
        android:layout_height="48sp"
        android:layout_marginStart="510sp"
        android:layout_marginTop="95sp"
        android:background="@drawable/character_hat"
        android:fontFamily="@font/segoesc"
        android:paddingStart="25sp"
        android:paddingTop="8sp"
        android:paddingEnd="10sp"
        android:text="@string/list_hat"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/list"
        app:layout_constraintEnd_toEndOf="@+id/list"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.978" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="200sp"
        android:layout_height="250sp"
        android:layout_marginStart="510sp"
        android:layout_marginTop="135sp"
        android:layout_marginBottom="16sp"
        android:background="@drawable/list"
        android:padding="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toEndOf="@+id/character" />

    <ImageView
        android:id="@+id/exitFromInventory"
        android:layout_width="77sp"
        android:layout_height="69sp"
        android:layout_marginStart="650sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:contentDescription="@string/exitFromInventory"
        android:layout_marginBottom="8sp"
        app:layout_constraintBottom_toTopOf="@+id/list_hat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toEndOf="@+id/char_hat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/back_2" />


    <ImageView
        android:id="@+id/character"
        android:layout_width="200sp"
        android:layout_height="315sp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="100sp"
        android:layout_marginBottom="16sp"
        app:srcCompat="@drawable/character" />

    <TextView
        android:id="@+id/tv_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="130sp"
        android:fontFamily="@font/segoesc"
        android:text="Сила"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="25sp"
        android:layout_marginTop="180sp"
        android:text="Уровень"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="25sp"
        android:layout_marginTop="230sp"
        android:text="Раса"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="25sp"
        android:layout_marginTop="280sp"
        android:text="Класс"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="25sp"
        android:layout_marginTop="330sp"
        android:text="Пол"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_strengthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="150sp"
        android:layout_marginTop="130sp"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_levelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="150sp"
        android:layout_marginTop="180sp"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_raceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="100sp"
        android:layout_marginTop="230sp"
        android:text="Человек"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_classType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="120sp"
        android:layout_marginTop="280sp"
        android:text="N/A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sexType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoesc"
        android:layout_marginStart="90sp"
        android:layout_marginTop="330sp"
        android:text="Мужчина"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>